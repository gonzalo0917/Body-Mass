<%= form_tag do %> 
  <div class="field">
    <%= label_tag :username, 'Username:' %> <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="field">
    <%= label_tag :password, 'Password:' %> <%= password_field_tag :password, params[:password] %>
  </div>
  <div class="field">
    <%= submit_tag "Iniciar sesión", :class => "btn" %>
  </div>
  <div class="field">
    ¿Aún no tienes cuenta?, <%= link_to "¡Regístrate gratis!", new_user_path %>
  </div>
<% end %>
